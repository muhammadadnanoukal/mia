<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="approval_purchase_request_view_form_inherit_manual_rfqs" model="ir.ui.view">
        <field name="name">approval.purchase.request.view.form.inherit.manual_rfqs</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_purchase_orders']" position="before">
                <field name="manual_rfqs" invisible="1"/>
                <field name="approval_type" invisible="1"/>
                <button name="action_open_manually_created_orders" type="object"
                    class="oe_stat_button" icon="fa-credit-card"
                    attrs="{'invisible': ['|', '|', ('approval_type', '!=', 'purchase'), ('request_status', '!=', 'approved'), ('manual_rfqs', '=', False)]}">
                    <field name="purchase_order_count_2" string="Manual RFQ's" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>